# 环境变量配置模板
# 复制此文件为 .env.local 并根据需要修改配置

# ===========================================
# 基础服务配置
# ===========================================

# Next.js服务器配置
PORT=3000
HOST=localhost
NODE_ENV=development

# CORS配置
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# ===========================================
# AI服务配置
# ===========================================

# Ollama本地AI服务
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=gemma3:4b
OLLAMA_TIMEOUT=30000
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=1000

# 智谱AI服务（可选）
# ZHIPU_API_KEY=your_zhipu_api_key_here
# ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# ZHIPU_DEFAULT_MODEL=glm-4.5v
# ZHIPU_TIMEOUT=30000

# ===========================================
# Python分析服务配置
# ===========================================

# Python FastAPI服务
PYTHON_SERVICE_URL=http://localhost:8001
PYTHON_TIMEOUT=120000
PYTHON_MAX_RETRIES=2
PYTHON_RETRY_DELAY=2000
PYTHON_EXECUTABLE=python
PYTHON_ENVIRONMENT=bio

# ===========================================
# 文件存储配置
# ===========================================

# 文件上传配置
UPLOAD_DIR=./public/uploads
TEMP_DIR=./tmp
MAX_FILE_SIZE=2147483648
MAX_TOTAL_FILE_SIZE=4294967296
CLEANUP_INTERVAL=3600000
MAX_FILE_AGE=86400000

# ===========================================
# 数据处理配置
# ===========================================

# 处理限制
MAX_PROCESSING_TIME=300000
MAX_CONCURRENT_JOBS=5
MEMORY_LIMIT=2GB
ENABLE_GPU=false

# ===========================================
# 会话管理配置
# ===========================================

# 会话设置
MAX_SESSIONS=1000
SESSION_TIMEOUT=1800000
SESSION_CLEANUP_INTERVAL=300000
MAX_MESSAGES_PER_SESSION=100

# ===========================================
# 日志配置
# ===========================================

# 日志设置
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_DIR=./logs
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# ===========================================
# 安全配置
# ===========================================

# 安全设置
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_CORS=true
TRUST_PROXY=false

# ===========================================
# 开发调试配置
# ===========================================

# 调试选项（仅开发环境）
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# ===========================================
# 生产环境配置
# ===========================================

# 生产环境特定配置（当NODE_ENV=production时生效）
# OLLAMA_TIMEOUT=60000
# PYTHON_TIMEOUT=180000
# LOG_LEVEL=warn
# ENABLE_RATE_LIMIT=true